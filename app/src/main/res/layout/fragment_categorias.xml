<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools   = "http://schemas.android.com/tools"
    android:layout_width  = "match_parent"
    android:layout_height = "match_parent"
    tools:context = ".ui.fragments.Categorias_fragment"
    android:background="@drawable/defuminado">

    <RelativeLayout
        android:id="@+id/RL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <FrameLayout
            android:id="@+id/FrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RL"
            tools:ignore="NotSibling">
            <com.example.trivianica.ui.animacionTombola.ImageViewScrolling
                android:id="@+id/Imagen"
                android:layout_width  = "@dimen/TimageViewScrolling"
                android:layout_height = "@dimen/TimageViewScrolling">
            </com.example.trivianica.ui.animacionTombola.ImageViewScrolling>
        </FrameLayout>

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FrameLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/quicksand_light"
            android:text="@string/txtTitulo"
            android:textColor="@color/black"
            android:textSize="@dimen/TTextoTextView"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>
</RelativeLayout>