<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.trivianica">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logoprincipal"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TriviaNica.NoActionBar"
        >

        <activity
            android:name=".ui.animacionTombola.ImageViewScrolling"
            tools:ignore="Instantiatable">
        </activity>

        <activity
            android:name=".ui.activities.SplashScreen_activity"
            android:theme="@style/Theme.TriviaNica.NoActionBar"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.activities.MenuPrincipal_activity"
            android:theme="@style/Theme.TriviaNica.NoActionBar"
            android:screenOrientation="portrait"
            >
        </activity>


    </application>

</manifest>